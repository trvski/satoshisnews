extends layout.pug

block content
  .post-list
    each post in posts
      .post
        .post-rank #{post.rank}.
        .post-title: a(href=post.url) #{post.title}
        .post-info
          | #{post.score} points by #{post.poster} #{post.age} |
          a(href='/post/'+ post.id) #{post.comments.length} comments
